{# templates/messages/new.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Messages</h1>

                {# you can read and display just one flash message type... #}
                {% for notice in app.flashes('notice') %}
                    <div class="alert alert-success flash-notice alert-dismissible fade show" role="alert">
                        {{ notice }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Submit a Message</h2>
                {{ form(form) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Total Messages ( {{ pagination.getTotalItemCount }})</h2>
                {% for comment in pagination %}
                    <div class="media">
                        <rect fill="#868e96" width="100%" height="100%"></rect>
                        <div class="media-body">
                            <h5 class="mt-0">{{ comment.message|truncate(10) }}</h5>
                            <p>{{ comment.message }}</p>
                            <p>{{ comment.email }}<br />
                                {{ comment.name}}</p>
                        </div>
                    </div>
                    <hr>
                {% else %}
                    <p>No Messages found</p>
                {% endfor %}
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>


{% endblock %}